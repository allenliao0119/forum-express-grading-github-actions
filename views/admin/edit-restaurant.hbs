<form action="/admin/restaurants/{{restaurant.id}}?_method=PUT" method="POST" enctype="multipart/form-data">
  <div class="mb-4 text-center">
    <h1 class="h3 font-weight-normal mb-3">Edit Restaurant</h1>
  </div>

  {{> admin-restaurant-form}}

  <button type="submit" class="btn btn-primary me-1 fw-bold"><i class="fa-solid fa-check"></i> Submit</button>
  <button type="reset" class="btn btn-warning me-1 fw-bold"><i class="fa-solid fa-arrow-rotate-left"></i> Recovery</button>
  <a class="btn btn-outline-secondary fw-bold" href="javascript:history.back()"><i class="fa-solid fa-xmark"></i> Back</a>
</form>